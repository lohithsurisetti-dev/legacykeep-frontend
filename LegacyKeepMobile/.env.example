# LegacyKeep Environment Configuration Template
# Copy this file to .env.development, .env.qa, .env.staging, or .env.production
# and fill in the actual values

# App Configuration
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_BUNDLE_ID=com.legacykeep.dev
EXPO_PUBLIC_APP_NAME=LegacyKeep Dev
EXPO_PUBLIC_APP_VERSION=1.0.0-dev

# API Configuration
EXPO_PUBLIC_API_BASE_URL=http://localhost:8080
EXPO_PUBLIC_API_TIMEOUT=10000
EXPO_PUBLIC_API_RETRY_ATTEMPTS=3

# Service Endpoints
EXPO_PUBLIC_AUTH_SERVICE_URL=http://localhost:8081
EXPO_PUBLIC_USER_SERVICE_URL=http://localhost:8082
EXPO_PUBLIC_CHAT_SERVICE_URL=http://localhost:8083
EXPO_PUBLIC_FAMILY_SERVICE_URL=http://localhost:8084
EXPO_PUBLIC_STORY_SERVICE_URL=http://localhost:8085
EXPO_PUBLIC_MEDIA_SERVICE_URL=http://localhost:8086
EXPO_PUBLIC_NOTIFICATION_SERVICE_URL=http://localhost:8087

# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# AWS S3 Configuration
EXPO_PUBLIC_AWS_REGION=us-east-1
EXPO_PUBLIC_AWS_S3_BUCKET=your_bucket_name
EXPO_PUBLIC_AWS_ACCESS_KEY_ID=your_access_key_id
EXPO_PUBLIC_AWS_SECRET_ACCESS_KEY=your_secret_access_key
EXPO_PUBLIC_AWS_CDN_URL=https://your-cdn-url.com

# Stripe Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
EXPO_PUBLIC_STRIPE_MERCHANT_ID=merchant.com.legacykeep.dev

# Google Maps Configuration
EXPO_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_CRASHLYTICS=false
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=false
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=false
EXPO_PUBLIC_ENABLE_PREMIUM_FEATURES=false
EXPO_PUBLIC_ENABLE_SOCIAL_LOGIN=false
EXPO_PUBLIC_ENABLE_LOCATION_SERVICES=false
EXPO_PUBLIC_ENABLE_CAMERA=true
EXPO_PUBLIC_ENABLE_GALLERY=true

# Development Tools
EXPO_PUBLIC_ENABLE_FLIPPER=true
EXPO_PUBLIC_ENABLE_REACT_DEV_TOOLS=true
EXPO_PUBLIC_ENABLE_REDUX_DEV_TOOLS=true
EXPO_PUBLIC_ENABLE_NETWORK_INSPECTOR=true

# Mock Services
EXPO_PUBLIC_ENABLE_MOCK_AUTH=true
EXPO_PUBLIC_ENABLE_MOCK_API=true
EXPO_PUBLIC_ENABLE_MOCK_STORAGE=true
EXPO_PUBLIC_ENABLE_MOCK_NOTIFICATIONS=true
